ENV=advanced-statistical-learning
CONF=config/default.yaml

.PHONY: setup run test clean

setup:
	./scripts/setup_env.sh

run:
	conda run -n $(ENV) bash -lc "./scripts/run_all.sh $(CONF)"

test:
	conda run -n $(ENV) python -m pytest -q

clean:
	rm -rf outputs/*.png outputs/*.csv outputs/*.json .pytest_cache
